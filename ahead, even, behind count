#where in count
sc2019$count <- if_else(sc2019$balls > sc2019$strikes, "Ahead", if_else(sc2019$balls == sc2019$strikes , "Even", "Behind"))

#plot the heat map shows where the player hits the ball 95+, the points show all batted balls
ggplot(sc2019 %>% filter((player_name =='Lorenzo Cain' | player_name =='Mike Moustakas' | player_name=='Yasmani Grandal' | player_name=='Orlando Arcia'|player_name=='Christian Yelich')& type=='X' & launch_speed >=95),aes(plate_x,plate_z))+stat_density_2d(aes(fill=..level..),geom='polygon',n=100)+facet_grid(player_name~count)+scale_fill_gradient(low='light blue',high = 'red')+scale_x_continuous(breaks=NULL)+scale_y_continuous(breaks=NULL)+annotate('rect', xmin = -.85, xmax = .85, ymin = 1.593172, ymax = 3.357285,alpha=.01,color='black')+annotate("segment", x = -.2833, xend = -.2833, y=1.593172, yend = 3.357285,alpha=.5) +annotate("segment", x=.2833, xend = .2833, y=1.593172, yend = 3.357285,alpha=.5)+annotate("segment",x=-.85, xend = .85, y = 2.18121, yend = 2.18121,alpha=.5)+annotate("segment",x=-.85, xend = .85, y = 2.769247, yend = 2.769247,alpha=.5)+theme_bw()
