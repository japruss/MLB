fg <- daily_batter_bref("2019-03-01", "2019-12-04") 

ggplot(fg %>% filter(PA>249),aes(PA,OPS,label=Name))+geom_point()+geom_text_repel(data=fg %>% filter(PA>249 & (PA>=500&OPS>=.95)|(PA<500 & PA>249  & OPS>=.92)|(PA>=710)|(PA >500 & OPS <.71)|(PA >249 & PA <501  & OPS <.6)),size=3)+geom_vline(xintercept = 500,alpha=.5)+theme_base()+geom_hline(yintercept = .8)+annotate("text", x = 280, y = 1.1, label = "Less PA, Good OPS", size=4)+annotate("text", x = 280, y = .5, label = "Less PA, Bad OPS", size=4)+annotate("text", x = 720, y = .5, label = "More PA, Bad OPS", size=4)+annotate("text", x = 720, y = 1.1, label = "More PA, Good OPS", size=4)+scale_y_continuous(breaks = seq(.5,1.1,.1),labels = scales::number_format(accuracy = 0.001))+labs(x = 'Plate Appearances',caption = 'Source: baseballr',title = "OPS vs Plate Appearances", subtitle = "Season: 2019; PA > 249")
